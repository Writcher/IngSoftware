<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 10.12.4//EN" "http://checkstyle.sourceforge.net/dtds/configuration_10_12_4.dtd">
<module name="Checker">
    <property name="fileExtensions" value="java"/>

    <module name="TreeWalker">
        <!-- Ensure that there are no tab characters in the code -->
        <module name="RegexpSingleline">
            <property name="format" value="^\t"/>
            <property name="message" value="Avoid using tabs; use spaces instead."/>
        </module>

        <!-- Ensure that lines do not exceed 120 characters -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^package .*"/>
        </module>

        <!-- Ensure proper indentation (4 spaces) -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
        </module>
    </module>
</module>